#include <stdio.h>
//循环嵌套
int main()
{
	int i,j,k;
	
	for (i=1;i<15 ;i++ )
	{
		
		//	printf("i=%d\tk=%d\tj=%d",i,15-i,2*i-1);
		printf("i=%d\tk=%d\tj=%d",i,15-i,2*i-1);
		//输出前导空格
	   // printf("\t\t\t");
		if (i<=5) printf(" ");
		
		for (k=i;k<15 ;k++ )
		{
			printf(" ");
		}
		//输出*
		for (j=1;j<=2*i-1 ;j++ )
		{
			
			printf("*");

		}
		
		printf("\n");

		
	}
	
	for (i=1;i<14 ;i++ )
	{
		//输出 列号、
		printf("i=%d\tk=%d\tj=%d",i,15-i,2*i-1);
		//输出前导空格
		
		for (k=1;k<=i+1 ;k++ )
		{
			printf(" ");
		}
		
		//输出*
		for (j=1;j<=(14-i)*2-1 ;j++ )
		{
			printf("*");
		}


		printf("\n");

		if (i>=9) printf(" ");
		

	}
	return 0;
}

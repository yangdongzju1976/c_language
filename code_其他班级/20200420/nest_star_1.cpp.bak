#include <stdio.h>
//循环嵌套
int main()
{
	int i,j,k;

	for (i=1;i<15 ;i++ )
	{
		//输出前导空格
		for (k=i;k<14 ;k++ )
		{
			printf(" ");
		}
		//输出*
		for (j=15-i;j<15 ;j++ )
		{
			
			printf("*");

		}
		
	for (j=16-i;j<15 ;j++ )
		{
			
			printf("*");

		}


		printf("\t\t\t\t\t i=%d\tk=%d\tj=%d\n",i,15-i,i);
	}
	
	return 0;
}

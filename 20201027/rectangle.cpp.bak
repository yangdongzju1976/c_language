#include <stdio.h>
#include "windows.h"

int main(int argc, char *argv[])
{

	int i,j,k,m,n;
	printf("输入n的值\n");
	scanf("%d",&n);
	system("color 70");
	//输出第一行
	printf("   ");
	for (i=0; i<2*n;i++ )
	{
		if (i%2==1)
		{
			printf(" ");
		}
		else 
		{
			printf("o");
		}

	}
	printf("\n");
	//输出中间的行
	for (i=0;i<n ;i++ )
	{
		printf("   o");
		//输出中间的空格
		for (j=0;j<2*n-3 ;j++ )
		{
			printf(" ");
		}
		printf("o\n");
	}
	//输出后面的行
	printf("   ");
	for (i=0; i<n*2;i++ )
	{
		if (i%2==1)
		{
			printf(" ");
		}
		else 
		{
			printf("o");
		}

	}
	
	printf("\n\n\n\n");
	
	return 0;
}
